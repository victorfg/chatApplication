            crossorigin="anonymous"></script>
        <script src="js/socket.io.js"></script>
        {{#if renderCanvasEffect}}
            <script type="text/javascript" src="js/TweenLite.min.js"></script>
            <script type="text/javascript" src="js/EasePack.min.js"></script>
            <script type="text/javascript" src="js/rAF.js"></script>
            <script type="text/javascript" src="js/canvasEffect.js"></script>
        {{/if}}
        <script type="text/javascript" src="js/webStorageAndAvatar.js"></script>
    </head>

    <body>
        {{#if renderCanvasEffect}}
            <div id="main-container-canvas-effect" class="main-container-canvas-effect">
                <canvas id="canvas-effect"></canvas>
                {{> informativeText }}
                {{> errors }}
                {{{ body }}}
            </div>
        {{else}}
            {{> informativeText }}
            {{> errors }}
            {{{ body }}}
        {{/if}}
    </body>
</html>